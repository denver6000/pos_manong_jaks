<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrintActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name of Printer" />

    <Button
        android:id="@+id/printData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Print Data" />

    <Button
        android:id="@+id/pritntWithDefaultPrinter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Print With Connected Printer" />

    <Button
        android:id="@+id/chooseDevice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pick Device" />

</LinearLayout>